{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "outDir": "dist/esm",
    "declaration": true
  },
  "include": ["src/**/*"]
}
